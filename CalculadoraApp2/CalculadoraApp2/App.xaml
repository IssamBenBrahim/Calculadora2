<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraApp2.App">
    
    <Application.Resources>
        
        <!--Estilos para los botones numericos-->
        <Style TargetType="Button" x:Key="PropiedadBotonNumerico">
            <Setter Property="BackgroundColor" Value="White"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <!--Estilos para los botones de los operadores matematicos-->
        <Style TargetType="Button" x:Key="PropiedadBotonOperadorMatematico">
            <Setter Property="BackgroundColor" Value="Orange"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>

        <!--Estilo para el boton borrar-->
        <Style TargetType="Button" x:Key="PropiedadBotonBorrar">
            <Setter Property="BackgroundColor" Value="Gray" />
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="TextColor" Value="White"/>
        </Style>
    </Application.Resources>
    
</Application>